<style>
    /*
        Aquí se encuentra todo el estilo para la tabla
        */
    .Tabla {
        background-color: #13232f;
        max-width: 900px;
        box-shadow: 0 4px 10px 4px rgba(#13232f,.3);
        padding: 40px;
        margin: 40px auto;
        border-radius: 4px;
    }

    table {
        border: 2px solid black;
        border-collapse: collapse;
        padding: 8px;
        max-width: 900px;
        background-color: #6c757d;
    }

    h1 {
        color: white;
        text-align: center;
        margin: 0 0 40px;
    }

    td, th {
        border: 1px solid black;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #C1BDBA;
    }

    /*
            Botón debajo de la tabla
            */
    .BotonRegistrar {
        display: block;
        width: 50%;
        border: 0;
        outline: none;
        border-radius: 0;
        padding: 15px 0;
        font-size: 50%;
        font-weight: 600;
     
        letter-spacing: .1em;
        background: #1ab188;
        color: #ffffff;
        transition: all.5s ease;
        -webkit-appearance: none;
    }

</style>
<div class="Tabla">
    <table id="Tabla de Empleados">
        <h1>Lista de Empleados</h1>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cédula</th>
                <th>Fecha de Nacimiento</th>
                <th>Edad</th>
                <th>Dirección</th>
            </tr>
        </thead>
    </table>
    <input class="BotonRegistrar" type="submit" name="RegistarEmpleado" value="Registrar un nuevo empleado" />

</div>
